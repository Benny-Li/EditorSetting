"##### Vim #####
set tabstop     = 4
set softtabstop = 4
set shiftwidth  = 4
set noexpandtab

set nobackup
set noswapfile
set hlsearch

"##### TagList #####
let Tlist_Sort_Type = "name"
let Tlist_Exit_OnlyWindow = 1
let Tlist_Ctags_Cmd ="/usr/bin/ctags"

"##### Ctags #####
set autochdir
set tags = tags;
